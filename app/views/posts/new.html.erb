<div class="row">
    <aside class="col-md-4">
      <%= form_for(@post) do |f| %>
        <div class="form-group">
          <p>レシピ名</p>
          <%= f.text_area :title, class: 'form-control', rows: 1 %>
        </div>
        <div class="form-group">
          <p>材料</p>
          <%= f.text_area :ingredient, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <p>作り方</p>
          <%= f.text_area :content, class: 'form-control', rows: 10 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'posts/posts', posts: @posts %>
    </div>
  </div>